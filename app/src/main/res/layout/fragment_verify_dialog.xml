<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/verify_board"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_title"
            android:gravity="center"
            android:text="Click to check attendance"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/product_sans_regular"
            android:textColor="#777777" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="35dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                android:elevation="5dp"
                android:id="@+id/camera" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/camera_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/progress_bar_drawable"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/attendance_checked_notification"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:text="Your attendance is checked\n stay in class to maintain attendance"
        android:gravity="center"
        />

</RelativeLayout>