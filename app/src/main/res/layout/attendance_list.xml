<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/attendance_background"
    android:layout_marginVertical="2dp"
    android:elevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/user_avatar_holder"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="35dp">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/user_avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_user"
            android:layout_gravity="center">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:id="@+id/user_info_holder"
        android:layout_toEndOf="@id/user_avatar_holder"
        android:layout_toStartOf="@id/today_attendance_holder"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:id="@+id/full_name"
            android:text="Le Viet Anh Le Viet "
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/student_id"
            android:text="ID: 20174523"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/today_attendance_holder"
        android:layout_toStartOf="@id/count_attendance_holder">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Today"
            android:padding="8dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/today_attendance"
            android:src="@drawable/ic_checked"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/count_attendance_holder"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Total"/>
        <TextView
            android:id="@+id/count_attendance"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="20dp"/>
    </LinearLayout>
</RelativeLayout>

